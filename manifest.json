    {
      "src": "/styles/assets/web-app-manifest-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "screenshots": [
    {
      "src": "/styles/assets/desktop_ss.png",
      "sizes": "864x512",
      "type": "image/png",
      "form_factor": "wide"
    },
    {
      "src": "/styles/assets/mobile_ss.png",
      "sizes": "540x720",
      "type": "image/png",
      "form_factor": "narrow"
    }
